{
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "description": "Configuration for joining tables.",
  "definitions": {
    "column": {
      "description": "Column.",
      "properties": {
        "name": {
          "description": "Name of column.",
          "title": "Name",
          "type": "string"
        },
        "value": {
          "default": null,
          "description": "SQL expression. If null, the column value is used.",
          "title": "Value",
          "type": [
            "null",
            "string"
          ]
        }
      },
      "required": [
        "name"
      ],
      "title": "Column"
    },
    "keyColumn": {
      "description": "Column.",
      "properties": {
        "name": {
          "description": "Name of column.",
          "title": "Name",
          "type": "string"
        },
        "type": {
          "default": null,
          "description": "Type of column.",
          "title": "Type",
          "type": [
            "null",
            "string"
          ]
        },
        "value": {
          "default": null,
          "description": "SQL expression. If null, the column value is used.",
          "title": "Value",
          "type": [
            "null",
            "string"
          ]
        }
      },
      "required": [
        "name"
      ],
      "title": "Column"
    },
    "table": {
      "additionalProperties": false,
      "description": "Source table.",
      "dependencies": {
        "joinOn": [
          "joinTargetTable"
        ]
      },
      "allOf": [
        {
          "oneOf": [
            {
              "required": [
                "destinationKeyExpr"
              ],
              "not": {
                "required": [
                  "joinTargetTable"
                ]
              }
            },
            {
              "required": [
                "joinTargetTable"
              ],
              "not": {
                "required": [
                  "destinationKeyExpr"
                ]
              }
            }
          ]
        },
        {
          "oneOf": [
            {
              "not": {
                "properties": {
                  "joinMode": {
                    "enum": [
                      "async"
                    ]
                  }
                },
                "required": [
                  "joinMode"
                ]
              }
            },
            {
              "required": [
                "joinTargetKey"
              ]
            }
          ]
        }
      ],
      "properties": {
        "lockId": {
          "default": null,
          "description": "Advisory lock space to use for queueing. If null, it is generated from the ID and table ID.",
          "maximum": 32677,
          "minimum": -32678,
          "title": "Lock ID",
          "type": [
            "integer",
            "null"
          ]
        },
        "tableSchema": {
          "default": "None",
          "description": "Name of schema.",
          "title": "Schema",
          "type": "string"
        },
        "tableName": {
          "description": "Name of table.",
          "title": "Table name",
          "type": "string"
        },
        "tableKey": {
          "default": null,
          "description": "Unique key for the table.",
          "items": {
            "$ref": "#/definitions/keyColumn"
          },
          "title": "key",
          "type": [
            "array",
            "null"
          ]
        },
        "tableColumns": {
          "items": {
            "$ref": "#/definitions/column"
          },
          "default": null,
          "description": "Columns to select from table.",
          "title": "Columns",
          "type": [
            "null",
            "array"
          ]
        },
        "joinTargetTable": {
          "default": null,
          "description": "IDs of dependency table.",
          "title": "Join dependency",
          "type": [
            "string",
            "null"
          ]
        },
        "joinTargetKey": {
          "default": null,
          "description": "Unique key for foreign table.",
          "items": {
            "type": "string"
          },
          "title": "Join key",
          "type": [
            "array",
            "null"
          ]
        },
        "joinOn": {
          "default": null,
          "description": "SQL expression to join to dependency.",
          "title": "Dependency join",
          "type": [
            "string",
            "null"
          ]
        },
        "joinMode": {
          "default": "sync",
          "description": "Mode of dependency join. Large many to one should use 'async'",
          "enum": [
            "async",
            "sync"
          ],
          "title": "Join consistency",
          "type": [
            "string",
            "null"
          ]
        },
        "joinOther": {
          "default": null,
          "description": "Expressions to add to join.",
          "title": "Join other",
          "type": [
            "string",
            "null"
          ]
        },
        "refreshFunction": {
          "default": false,
          "description": "Whether to generate a refresh function.",
          "title": "Refresh function",
          "type": "boolean"
        },
        "destinationKeyExpr": {
          "default": null,
          "description": "SQL expressions for this table's columns that make up the destination table's key columns ([this table name].[column name]).",
          "items": {
            "type": "string"
          },
          "title": "key",
          "type": [
            "array",
            "null"
          ]
        }
      },
      "type": "object",
      "title": "Table"
    },
    "destinationTable": {
      "description": "Destination table where denormalized data will be stored.",
      "properties": {
        "tableSchema": {
          "default": null,
          "description": "Schema of table. If null, the table is not schema-qualified.",
          "title": "Schema",
          "type": "string"
        },
        "tableName": {
          "description": "Name of table.",
          "title": "Name",
          "type": "string"
        },
        "tableKey": {
          "default": null,
          "description": "Key columns",
          "items": {
            "type": "string"
          },
          "title": "Key",
          "type": [
            "array",
            "null"
          ]
        },
        "tableColumns": {
          "default": null,
          "description": "Columns. Must match columns from destinationQuery select (?)",
          "items": {
            "type": "string"
          },
          "title": "Columns",
          "type": [
            "array",
            "null"
          ]
        }
      },
      "required": [
        "tableName"
      ],
      "title": "Destination table"
    }
  },
  "properties": {
    "consistency": {
      "default": "immedidate",
      "description": "Consistency level. Immediate applies at the end of the command. Deferred applies at the end of a transaction.",
      "enum": [
        "deferred",
        "immediate"
      ],
      "title": "Consistency",
      "type": "string"
    },
    "context": {
      "default": [],
      "description": "PostgreSQL settings to propogate through async joins",
      "items": {
        "type": "string"
      },
      "title": "Context",
      "type": "array"
    },
    "id": {
      "description": "ID for name mangling created objects.",
      "title": "ID",
      "type": "string"
    },
    "lock": {
      "default": false,
      "description": "Whether to lock before refreshing target.",
      "title": "Lock",
      "type": "boolean"
    },
    "key": {
      "default": null,
      "description": "Key. If null, uses values from targetTable.",
      "item": {
        "$ref": "#/definitions/keyColumn"
      },
      "title": "Key",
      "type": [
        "array",
        "null"
      ]
    },
    "setup": {
      "$ref": "#/definitions/hook",
      "default": null,
      "description": "Setup function.",
      "title": "Setup"
    },
    "schema": {
      "default": null,
      "description": "Schema for created objects. If not set, the default schema is used.",
      "title": "Schema",
      "type": "string"
    },
    "tables": {
      "additionalProperties": {
        "$ref": "#/definitions/table"
      },
      "description": "Map from ID to table.",
      "title": "Tables",
      "type": "object"
    },
    "destinationQuery": {
      "default": "TABLE ${key}",
      "description": "Query to populate the destination table columns. If no table is specified, destination query could still be a function call or something else.",
      "title": "Query",
      "type": [
        "string",
        "null"
      ]
    },
    "destinationTable": {
      "$ref": "#/definitions/destinationTable"
    }
  },
  "required": [
    "id",
    "tables"
  ],
  "title": "Join config",
  "type": "object"
}
