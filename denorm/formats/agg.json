{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Configuration for aggregating a table.",
  "definitions": {
    "aggregate": {
      "properties": {
        "combine": {
          "default": null,
          "description": "Combining expression. If null, defaults to existing.$name + excluding.$name",
          "title": "Combine",
          "type": ["string", "null"]
        },
        "value": {
          "title": "Expression",
          "type": "string"
        }
      },
      "required": ["value"],
      "type": "object"
    },
    "group": {
      "description": "Group expression",
      "title": "Group",
      "type": "string"
    },
    "table": {
      "description": "Table.",
      "properties": {
        "name": {
          "description": "Name.",
          "title": "Name",
          "type": "string"
        },
        "schema": {
          "default": null,
          "description": "Schema.",
          "title": "Schema",
          "type": ["string", "null"]
        }
      },
      "required": ["name"],
      "title": "Target"
    }
  },
  "properties": {
    "aggregates": {
      "additionalProperties": {
        "$ref": "#/definitions/aggregate"
      },
      "description": "Aggregates.",
      "title": "Aggregates"
    },
    "consistency": {
      "default": "immediate",
      "description": "Consistency",
      "enum": ["deferred", "immediate"],
      "title": "Consistency",
      "type": "string"
    },
    "filter": {
      "default": null,
      "description": "Row filter",
      "title": "Filter",
      "type": ["string", "null"]
    },
    "groups": {
      "additionalProperties": {
        "$ref": "#/definitions/group"
      }
    },
    "id": {
      "description": "ID used to name-mangle.",
      "title": "ID",
      "type": "string"
    },
    "schema": {
      "default": null,
      "description": "Schema for created objects.",
      "title": "Schema",
      "type": ["string", "null"]
    },
    "source": {
      "$ref": "#/definitions/table"
    },
    "target": {
      "$ref": "#/definitions/table"
    }
  },
  "required": ["aggregates", "groups", "id"],
  "title": "Aggregate config"
}
